<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight number</th>
      <th>Depart</th>
      <th>Destination</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach((f) => { %>
      <tr>
        <td> <%= f.airline %> </td>
        <td> <%= f.flightNo %> </td>
        <td> <%= f.departs %> </td>
        <td> <%= f.destination %> </td>
        <td><a href="/flights/<%= f._id %>/details">Details</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>